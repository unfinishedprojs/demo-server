generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  discordId     String         @id
  invite        String         @unique
  inviteModel   InviteModel?   @relation(fields: [invite], references: [invite])
  token         String         @unique
  iEvent        InviteEvent?   @relation(fields: [iEventId], references: [eventId])
  iEventId      String?        @unique
  positiveVotes PositiveVote[]
  negativeVotes NegativeVote[]
}

model InviteModel {
  invite    String @id
  discordId String @unique
  user      User?
}

model InviteEvent {
  eventId       String         @id
  discordId     String
  user          User?
  invite        String         @unique
  ended         Boolean
  createdAt     DateTime       @default(now())
  duration      Int
  positiveVotes PositiveVote[]
  negativeVotes NegativeVote[]
}

model PositiveVote {
  id        Int         @id @default(autoincrement())
  userToken String
  iEventId  String
  user      User        @relation(fields: [userToken], references: [token])
  iEvent    InviteEvent @relation(fields: [iEventId], references: [eventId])
  createdAt DateTime    @default(now())

  @@unique([userToken])
}

model NegativeVote {
  id        Int         @id @default(autoincrement())
  userToken String
  iEventId  String
  user      User        @relation(fields: [userToken], references: [token])
  iEvent    InviteEvent @relation(fields: [iEventId], references: [eventId])
  createdAt DateTime    @default(now())

  @@unique([userToken])
}
